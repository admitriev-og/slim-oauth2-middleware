{
    "name": "chadicus/slim-oauth2-middleware",
    "description": "OAuth2 middleware for use within a Slim Framework API",
    "keywords": ["slim", "oauth2", "middleware"],
    "authors": [
        {
            "name": "Chad Gray",
            "email": "chadwickgray@gmail.com",
            "role": "Developer"
        }
    ],
    "license": "MIT",
    "config" : {
        "sort-packages": true
    },
    "repositories": [
      {
          "type": "vcs",
          "url": "https://github.com/tchapi/slim-oauth2-http"
      }
    ],
    "require": {
        "php": "^7.0 || ^8.0",
        "bshaffer/oauth2-server-php": "^1.9",
        "chadicus/slim-oauth2-http": "dev-next",
        "container-interop/container-interop": "^1.1",
        "psr/http-message": "^1.0"
    },
    "require-dev": {
        "chadicus/coding-standard": "^1.8",
        "php-coveralls/php-coveralls": "^2.5",
        "php-di/php-di": "^5.4",
        "phpunit/phpunit": "^8.5",
        "zendframework/zend-diactoros": ">=1.3.2"
    },
    "autoload": {
        "psr-4": {"Chadicus\\Slim\\OAuth2\\Middleware\\" : "src"}
    },
    "autoload-dev": {
        "psr-4": {"ChadicusTest\\Slim\\OAuth2\\Middleware\\" : "tests"}
    },
    "suggest": {
        "chadicus/slim-oauth2-routes": "Offers standard OAuth2 routes for slim applications"
    }
}
